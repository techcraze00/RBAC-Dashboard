<%- include('./layouts/header') %>

<div class="info-card-container">
  <div class="info-card">

    <div class="card-content">
      <img src="https://i.pinimg.com/1200x/2b/ab/e9/2babe93bbaf35135d92df2007efb3aa4.jpg" alt="Your Photo" class="profile-picture"
      <h2>Prayas Jadhav</h2>
